<%= form_for(@post) do |f| %>
  <%= f.label :title %></br>
  <%= f.text_field :title %></br>

  <%= f.label :body %></br>
  <%= f.text_area :body %></br>

  <%= f.label :categories %></br>
  <% @categories.each do |category| %>
    <%= f.check_box :categories, { multiple: true, checked: @category_ids.include?(category.id) }, category.id, false %> <%= category.name %> </br>
  <% end %>
  <%= f.submit "Save" %></br>
<%end%>
