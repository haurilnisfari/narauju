<% if flash[:notice].present? %>
  <%= flash[:notice] %>
<% end %>
</br>
<div class="card">
  <%= @post.created_at.strftime("%e %b %Y") %>
  |
  <% @post.categories.each do |category| %>
    <%= link_to category.name, category_path(category) %>
  <% end %>
  <h2><%= @post.title %></h2>
  <p><%= @post.body %></p>
</div>
